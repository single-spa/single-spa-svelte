  "homepage": "https://github.com/single-spa/single-spa-svelte#readme",
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
